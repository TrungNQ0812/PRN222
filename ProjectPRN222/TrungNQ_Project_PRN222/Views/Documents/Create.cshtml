@model TrungNQ_Project_PRN222.Models.Document

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Document</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DocumentTitle" class="control-label"></label>
                <input asp-for="DocumentTitle" class="form-control" />
                <span asp-validation-for="DocumentTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DocumentContent" class="control-label"></label>
                <input asp-for="DocumentContent" class="form-control" />
                <span asp-validation-for="DocumentContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DocumentStatusId" class="control-label"></label>
                <select asp-for="DocumentStatusId" class="form-control" asp-items="ViewBag.DocumentStatusId"></select>
            </div>

            <!-- Trường ẩn để lưu AccountId -->
            <input type="hidden" asp-for="AccountId" value="@ViewBag.AccountId" />

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger small">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
