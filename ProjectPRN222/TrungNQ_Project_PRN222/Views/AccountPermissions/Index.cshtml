@model IEnumerable<TrungNQ_Project_PRN222.Models.AccountPermission>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success small">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.Permission)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Account.AccountId)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.FullName)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Permission.PermissionId)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Permission.PermissionName)
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.AccountPermissionId" class="btn btn-success small">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.AccountPermissionId" class="btn btn-warning small">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.AccountPermissionId" class="btn btn-danger small">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
